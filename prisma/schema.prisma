// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tech {
  id   String @id @default(uuid())
  name String
  icon String
  exp  Int

  projects Project[]

  @@map("techs")
}

model Project {
  id          String @id @default(uuid())
  title       String
  description String
  repoUri     String
  deployUri   String
  thumbUri    String

  projectSection ProjectSection[]
  techs          Tech[]

  @@map("projects")
}

model ProjectSection {
  id        String @id @default(uuid())
  name      String
  imageUri  String
  projectId String

  project Project @relation(fields: [projectId], references: [id])

  @@map("projects_sections")
}
